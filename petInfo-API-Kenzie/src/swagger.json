{
  "openapi": "3.0.3",
  "info": {
    "title": "Pet Info",
    "description": "API para desenvolvimento da aplicação Pet Info que será realizada como entrega da Sprint6",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3333"
    }
